/* commpoents/goodsFloor/goodsFloor.wxss */
.floor_list {
  /* 清除浮动 */
  overflow: hidden;
}
.floor_title {
  padding: 10rpx 0;
}
.floor_title image {
  width: 100%;
}
.floor_list navigator{
  float: left;
  width: 33.33%;
}
.floor_list navigator image {
  width: 100%;
}
.floor_list navigator:nth-last-child(-n+4) {
  /* 
  原图的高度是232*386
  232 / 386 = 33.33vw / height
  第一张图片的高度：height:33.33vw * 386 / 232 /2=27.72711207vw
  */
  height: 27.72711207vw;
  /* 给左边的图片加边框 */
  border-left: 10rpx solid #fff;
}
.floor_list navigator:nth-last-child(-n+4) image {
  width: 100%;
  height: 100%;
}
.floor_list navigator:nth-child(2) {
  border-bottom: 10rpx solid #fff;
} 
.floor_list navigator:nth-child(3) {
  border-bottom: 10rpx solid #fff;
} 